<Page x:Class="MOBA_Manager.UI.IntroScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MOBA_Manager.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IntoScreen">

    <Grid>
        <TextBox HorizontalAlignment="Center" Height="23" Margin="0,150,0,0" TextWrapping="Wrap" Text="PooPoo" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="Enter Your Name:" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Button Content="Begin" HorizontalAlignment="Center" Margin="0,0,0,50" VerticalAlignment="Bottom" Width="75" Click="Button_Click"/>

    </Grid>
</Page>
