<Page x:Class="MOBA_Manager.UI.UserCreation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MOBA_Manager.UI"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserCreation">

    <Grid Background="#FF1B3B91">
        <Label Content="User Creation" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="48" FontFamily="Segoe UI Light" />
        <Button x:Name="BeginButton" Content="Start" HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" Width="75" BorderBrush="{x:Null}" Foreground="White" Background="{x:Null}" FontSize="20" Click="BeginButton_Click" />
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="51,116,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" />
        <Label Content="Last Name:" Width="100" HorizontalAlignment="Left" Margin="51,157,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" />
        <TextBox x:Name="LastNameBox" HorizontalAlignment="Left" Height="23" Margin="151,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="FirstNameBox" HorizontalAlignment="Left" Height="23" Margin="151,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Team Name:" HorizontalAlignment="Left" Margin="522,116,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" />
        <TextBox x:Name="TeamNameBox" HorizontalAlignment="Left" Height="23" Margin="643,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
    </Grid>
</Page>