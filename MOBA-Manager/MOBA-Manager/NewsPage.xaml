<Page x:Class="MOBA_Manager.NewsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MOBA_Manager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewsPage">

    <Grid>
        <ListBox x:Name="NewsListBox" Margin="0,0,624,0" Width="175" HorizontalAlignment="Left" BorderThickness="1,1,2,1" BorderBrush="Black">
            <ListBoxItem Content="Your news" FontSize="14" FontWeight="Bold"/>
        </ListBox>
        <TextBlock Margin="175,50,0,0" TextWrapping="Wrap" Text="This is where your news will go" Background="#FFE0E0E0" FontWeight="Bold" FontSize="14"/>
        <TextBox Margin="175,0,0,0" TextWrapping="Wrap" Text="TextBox" FontSize="14" FontWeight="Bold" Background="#FFE0E0E0" BorderBrush="Black" BorderThickness="0,1" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="50" Width="Auto" VerticalAlignment="Top"/>
    </Grid>
</Page>
