<UserControl x:Class="MOBA_Manager.Source.UI.InGameUI.BuyPlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MOBA_Manager.Source.UI.InGameUI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" BorderBrush="White" Height="64" Margin="0">
    <UserControl.Background>
        <SolidColorBrush Color="Black" Opacity="0.4" />
    </UserControl.Background>
    <Grid Height="64" Margin="0">
        <Image x:Name="PlayerPortrait" HorizontalAlignment="Left" Height="64" VerticalAlignment="Top" Width="64" />
        <Label x:Name="PlayerNameLabel" Content="Label" HorizontalAlignment="Left" Margin="116,18,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" FontFamily="Segoe UI Light" />
        <Button Content="" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Center" Width="75" Height="45">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="/MOBA-Manager;component/Assets/UI/money-stack.png" Stretch="None"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>