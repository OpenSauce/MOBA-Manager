<Window x:Name="MOBA_Manager" x:Class="MOBA_Manager.MainWindow"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MOBA_Manager"
        mc:Ignorable="d"
        Title="MOBA-Manager" Height="Auto" Width="Auto" MinWidth="800" MinHeight="450" WindowState="Maximized">

    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#FF7C0F0F" FontWeight="Bold">
            <MenuItem Header="_File">
                <MenuItem Header="_Load"/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="_Settings" Click="MenuItem_Click"/>
                <MenuItem Header="_Close"/>
            </MenuItem>
        </Menu>
        <Grid Margin="0" Height="Auto" Width="Auto">
                <Frame x:Name="MainFrame" Content="Frame" NavigationUIVisibility="Hidden"/>
            </Grid>
    </DockPanel>
</Window>
