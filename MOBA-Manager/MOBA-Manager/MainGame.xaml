<Page x:Class="MOBA_Manager.MainGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MOBA_Manager"
      mc:Ignorable="d" 
      MinWidth="900" MinHeight="450"
      Height="Auto" Width="Auto"
      Title="MainGame">

    <Grid Width="Auto" Height="Auto">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="Red" Offset="0.873"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Height="50" Width="Auto" VerticalAlignment="Top">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="Red" Offset="0.75"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label x:Name="NameLabel" Content="Name: N/A" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Width="Auto" Margin="0,10,0,-20" Foreground="#FF020202" FontWeight="Bold"/>
            <Label x:Name="CashLabel" Content="Cash: 0" HorizontalAlignment="Center" Margin="304,10,374,-4" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="16" Width="148" Foreground="#FF020202" FontWeight="Bold"/>
            <Label x:Name="TeamLabel" Content="Team: N/A" HorizontalAlignment="Right" Margin="0,10,135,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" FontSize="16" Background="{x:Null}" Foreground="#FF020202" FontWeight="Bold"/>
            <Button x:Name="ProceedButton" Content="Proceed" HorizontalAlignment="Right" Height="30" Margin="0,10,10,10" VerticalAlignment="Top" Width="100" Click="ProceedButton_Click" BorderThickness="2"/>
        </Grid>
    </Grid>
</Page>
